@model MvcMovie.Models.Character

<div class="background">
    <div class="description">
        <h1>Create Character</h1>

        <form asp-controller="Game" asp-action="CreateCharacter" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="CharacterName"></label>
                <input asp-for="CharacterName" class="form-control" />
                <span asp-validation-for="CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class"></label>
                <select asp-for="Class" class="form-control">
                    <option value="Warrior">Warrior</option>
                    <option value="Mage">Mage</option>
                    <option value="Rogue">Rogue</option>
                </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avatar">Avatar</label>
                <input asp-for="Avatar" type="file" class="form-control" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-custom">Create</button>
        </form>
    </div>
</div>
